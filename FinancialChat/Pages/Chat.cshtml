@page
@model FinancialChat.Pages.ChatModel

@{
    ViewData["Title"] = "Chat";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Chat</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.SenderID" class="control-label"></label>
                <select asp-for="Message.SenderID" class ="form-control" asp-items="ViewBag.SenderID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.Username" class="control-label"></label>
                <input asp-for="Message.Username" class="form-control" />
                <span asp-validation-for="Message.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Text" class="control-label"></label>
                <input asp-for="Message.Text" class="form-control" />
                <span asp-validation-for="Message.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.MessageTime" class="control-label"></label>
                <input asp-for="Message.MessageTime" class="form-control" />
                <span asp-validation-for="Message.MessageTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
